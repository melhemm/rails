<tr>
  <td class="algin-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="algin-middle"><%= test.level %></td>
  <td class="algin-middle"><%= test.questions.size %></td>
  <td class="algin-middle"><%= link_to t('actions.show'), admin_test_path(test) %></td>
  <td class="algin-middle">
    <%= link_to t('actions.edit'), 
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: "form-inline-link" %>
  </td>
  
  <td>
    <%= link_to t('actions.delete'),
                admin_test_path(test),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>